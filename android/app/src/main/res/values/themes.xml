<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CostumeApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fashion_primary</item>
        <item name="colorPrimaryVariant">@color/fashion_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fashion_accent</item>
        <item name="colorSecondaryVariant">@color/fashion_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/fashion_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/fashion_primary</item>
        <!-- Remove ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RoundedAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>